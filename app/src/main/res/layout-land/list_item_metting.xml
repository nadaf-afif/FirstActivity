<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/background_shadow"
    android:layout_margin="5dp"
    >


    <TextView
        android:id="@+id/meetingNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="meeting name"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/name_background"
        android:maxLines="2"
        />



    <TextView
        android:id="@+id/meetingVenueNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/venue"
        android:layout_below="@+id/meetingNameTextView"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        />


    <TextView
        android:id="@+id/meetingDateTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/venue"
        android:layout_below="@+id/meetingVenueNameTextView"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>