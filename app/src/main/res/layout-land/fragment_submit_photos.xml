<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    >

    <include
        android:id="@id/actionToolbar"
        layout="@layout/action_toolbar_layout"/>

    <ImageView
        android:id="@+id/submitPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:src="@drawable/upload_image_bg"
        android:layout_margin="10dp"

        />
    <TextView
        android:id="@+id/clickHereTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="click to submit"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/material_blue_grey_950"
        />
    
    <Button

        android:id="@+id/uploadButton"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="Upload"
        android:textColor="@android:color/white"
        android:background="@color/accent_color"
        android:textSize="20dp"
        />




</LinearLayout>