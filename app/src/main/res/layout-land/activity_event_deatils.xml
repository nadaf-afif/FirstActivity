<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionToolbar"
        layout="@layout/action_toolbar_layout"/>




    <ScrollView
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionToolbar"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/eventPhotoImageView"
                android:layout_width="400dp"
                android:layout_height="180dp"
                android:src="@drawable/rtn_logo"
                android:layout_below="@+id/actionToolbar"
                android:layout_gravity="center_horizontal"
                />

                <TextView
                    android:id="@+id/eventNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="@string/event_name"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/name_background"
                    android:textSize="18sp"
                    android:background="@drawable/background_shadow"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    />



                <TextView
                    android:id="@+id/venueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="@string/venue"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/name_background"
                    android:textSize="18sp"
                    android:background="@drawable/background_shadow"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_action_place"
                    android:drawablePadding="10dp"

                    />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/date"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="10dp"

                />




            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/time"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_time"
                android:drawablePadding="10dp"
                />


            <TextView
                android:id="@+id/inviteesTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/invitees"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_group"
                android:drawablePadding="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@drawable/background_shadow"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                >


                <Switch
                    android:id="@+id/spouceSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/spouce"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/name_background"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@drawable/background_shadow"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                >


                <Switch
                    android:id="@+id/childrenSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/children"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/name_background"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/background_with_shadow"
                >

                <TextView
                    android:id="@+id/yesTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/name_background"
                    android:background="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/noTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:textColor="@color/name_background"
                    android:background="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/maybeTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/maybe"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:textColor="@color/name_background"
                    android:background="@android:color/white"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>