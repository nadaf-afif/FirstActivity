<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:padding="10dp"
    android:background="@android:color/white"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/rtn_logo"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username_email"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:background="@drawable/background_shadow"
            android:textColor="@color/material_blue_grey_800"
            />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/emailEditText"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:maxLength="15"
            android:text=""
            android:background="@drawable/background_shadow"
            android:textColor="@color/material_blue_grey_800"
            />


        <Button
            android:id="@+id/loginButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEditText"
            android:layout_centerHorizontal="true"
            android:text="@string/login_text"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:background="@color/accent_color"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/getOTPTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_otp_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/name_background"
            android:padding="5dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/requestNewAccessTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_new_access"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/getOTPTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/name_background"
            android:padding="5dp"
            />

    </RelativeLayout>




</LinearLayout>