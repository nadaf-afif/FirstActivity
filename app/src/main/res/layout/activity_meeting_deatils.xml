<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionToolbar"
        layout="@layout/action_toolbar_layout"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionToolbar"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/hostName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/host"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"

                />

            <TextView
                android:id="@+id/meetingNameTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/meeting_type"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_shadow"
                android:padding="5dp"
                />




            <LinearLayout
                android:id="@+id/venueLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_shadow"
                >

                <TextView
                    android:id="@+id/venueAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="@string/venue"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/name_background"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_action_place"
                    android:drawablePadding="10dp"

                    />


                <TextView
                    android:id="@+id/venueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/venue"
                    android:gravity="center_vertical"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/date"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="10dp"

                />




            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/time"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_time"
                android:drawablePadding="10dp"
                />


            <TextView
                android:id="@+id/inviteesTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/invitees"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/name_background"
                android:textSize="18sp"
                android:background="@drawable/background_shadow"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_action_group"
                android:drawablePadding="10dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_shadow"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/spouseTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/spouce"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/name_background"
                    />


                <TextView
                    android:id="@+id/spouseInvitedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="invited"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/background_shadow"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/children"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/name_background"
                    />

                <TextView
                    android:id="@+id/childrenInvitedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="invited"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/primary_color"
                    />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/background_with_shadow"
                >

                <TextView
                    android:id="@+id/yesTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/name_background"
                    android:background="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/noTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:textColor="@color/name_background"
                    android:background="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/maybeTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/maybe"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:textColor="@color/name_background"
                    android:background="@android:color/white"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>