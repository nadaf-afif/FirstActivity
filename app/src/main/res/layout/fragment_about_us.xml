<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/aboutRTVTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="About RTN"
        android:gravity="center_vertical"
        android:background="@drawable/background_shadow"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/name_background"
        android:drawableRight="@drawable/right_arrow"
        android:paddingRight="10dp"
        />


    <TextView
        android:id="@+id/aimsAndObjectiveTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Aims and Objective"
        android:gravity="center_vertical"
        android:background="@drawable/background_shadow"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/name_background"
        android:drawableRight="@drawable/right_arrow"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/boardMembersTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Board Members"
        android:gravity="center_vertical"
        android:background="@drawable/background_shadow"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/name_background"
        android:drawableRight="@drawable/right_arrow"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/contactsTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Contact Us"
        android:gravity="center_vertical"
        android:background="@drawable/background_shadow"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/name_background"
        android:drawableRight="@drawable/right_arrow"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        />


</LinearLayout>